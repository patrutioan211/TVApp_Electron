{
  "name": "AumovioTVApp",
  "version": "1.0.0",
  "description": "Digital signage app using Electron, Vite, React, Tailwind, and simple-git.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5174 && set USE_DEV_SERVER=1&& electron .",
    "build": "vite build",
    "start": "npm run build && electron .",
    "icons": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "hls.js": "^1.6.15",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.0",
    "electron": "^31.0.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.38",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.4",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  }
}
